{
  "name": "@react-keycloak/keycloak-ts",
  "version": "0.2.2",
  "license": "MIT",
  "description": "Keycloak typescript adapter",
  "repository": "https://github.com/react-keycloak/keycloak-ts",
  "author": "Mattia Panzeri <mattia.panzeri93@gmail.com> (https://github.com/Panz3r)",
  "bugs": {
    "url": "https://github.com/react-keycloak/keycloak-ts/issues"
  },
  "homepage": "https://github.com/react-keycloak/keycloak-ts#readme",
  "keywords": [
    "react",
    "keycloak",
    "keycloak-js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "files": [
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it"
  },
  "dependencies": {
    "base64-js": "^1.3.1",
    "js-sha256": "^0.9.0",
    "jwt-decode": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@commitlint/config-conventional": "^13.1.0",
    "@react-native-community/eslint-config": "^2.0.0",
    "@release-it/conventional-changelog": "^3.0.1",
    "@types/base64-js": "^1.3.0",
    "@types/jest": "^27.0.0",
    "babel-jest": "^26.3.0",
    "commitlint": "^13.1.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "3.4.1",
    "husky": "^4.2.5",
    "jest": "^26.6.3",
    "prettier": "^2.0.5",
    "release-it": "^14.6.2",
    "typescript": "^3.8.3"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "arrowParens": "avoid",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "arrowParens": "avoid",
    "useTabs": false
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
